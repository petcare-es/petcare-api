generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String            @id @default(uuid())
  name              String
  email             String            @unique
  password          String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  pets              Pet[]

  @@map("users")
}

model Pet {
  id                String            @id @default(uuid())
  name              String
  ownerId           String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  owner             User              @relation(fields: [ownerId], references: [id])
  vaccines          Vaccine[]
  moods             MoodDiary[]

  @@map("pets")
}

model Vaccine {
  id                String            @id @default(uuid())
  name              String
  location          String
  petId             String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  owner             Pet               @relation(fields: [petId], references: [id])

  @@map("vaccines")
}

enum Mood{
  NERVOSO
  FELIZ
  CANSADO
  ANCIOSO
  CARINHOSO
  TRISTE

}

model MoodDiary {
  id                String            @id @default(uuid())
  mood              Mood
  petId             String
  date              DateTime        
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  owner             Pet               @relation(fields: [petId], references: [id])

  @@map("moods")
}
